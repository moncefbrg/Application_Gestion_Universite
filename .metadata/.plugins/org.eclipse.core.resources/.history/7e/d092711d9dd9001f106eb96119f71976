package com.example.demo;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;

import com.example.demo.entities.Etudiant;
import com.example.demo.services.Etudiant.IEtudiantService;

@SpringBootApplication
public class Application1Application {

    public static void main(String[] args) {
        SpringApplication.run(Application1Application.class, args);
    }

    @Bean
    public CommandLineRunner demo(IEtudiantService etudiantService) {
        return args -> {
            // Exemple : Rechercher un étudiant par son ID
            Etudiant etudiant = etudiantService.chercherEtudiantById((long) 5);
            if (etudiant != null) {
                System.out.println("Étudiant trouvé : " + etudiant);
            } else {
                System.out.println("Aucun étudiant trouvé avec l'ID 5.");
            }
        };
    }
}